<table><tr>
  <td>
      <%= f.label :parent_id, 'Parent' %><br />
      <select name="page[parent_id]">
        <option value="">None (top level)</option>
        <optgroup label="Select a parent navigation item">
          <%= page_options @page.parent_id %>
        </optgroup>
      </select>
  </td>
  <td>
    <%= label :page, :publish_from %><br />
    <%= date_select :page, :publish_from, :order => [:day,:month,:year], :start_year => 2000, :include_blank => true %>
  </td>
  <td>
    <%= label :page, :publish_to %><br />
    <%= date_select :page, :publish_to, :order => [:day,:month,:year], :start_year => 2000, :include_blank => true %>
  </td>
</tr></table>